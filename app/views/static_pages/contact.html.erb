<% provide(:title, "Contact") %>
<div class="contactBlurb">
  <h1><%= t 'contact_page_title' %></h1>
  <p><%= t 'contact_page_info_one' %></p>
  <p><%= t 'contact_page_info_two' %></p>
</div>
<%= form_for @message, url: create_message_url do |f| %>
  <%= notice %>
  <%= @message.errors.full_messages.join(', ') %>

  <%= f.text_field :name, placeholder: 'Name' %>
  <%= f.email_field :email, placeholder: 'Email' %>
  <%= f.text_area :message, placeholder: 'Message' %>
  <%= f.submit 'Send', :class => 'submit_button' %>
<% end %>
