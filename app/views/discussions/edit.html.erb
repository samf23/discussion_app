<%# Where a user can edit a discussion %>
<% provide(:title, "Edit Discussion") %>
<h1><%= t 'discussion.edit.edit_page_title' %></h1>
<%= form_for(@discussion) do |f| %>
  <%= f.text_field :title, placeholder: 'Title' %>
  <%= f.text_area :content, placeholder: 'Content' %>
  <%= f.submit :class => 'submit_button' %>
<% end %>
<% if flash[:errors] %>
  <h2 class="editError"><%= t 'discussion.error_header' %></h2>
  <% flash[:errors].each do |e| %>
    <p class="editError"><%= e %></p>
  <% end %>
<% end %>
