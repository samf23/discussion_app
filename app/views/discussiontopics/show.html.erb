<h1><%= @discussions.count > 0 ? @discussions.first.discussion_topic.topic : @discussions.count%> Discussion's</h1>
<a class="createDiscussion" href="/discussions/new/<%= params[:id] %>">Create Discussion</a>
<table>
  <thead>
    <tr>
      <td>Title</td>
      <td>Brief description</td>
      <td>Date created</td>
      <td>Created by</td>
      <td>Options</td>
    </tr>
  </thead>
  <tbody>
    <% @discussions.each do |discussion| %>
    <tr>
      <td><a class="discussionLink" href="/discussions/<%= discussion.id %>"><%= discussion.title %></a></td>
      <td><%= truncate(discussion.content,:length => 80) %></td>
      <td><%= discussion.created_at %></td>
      <td><%= discussion.user.name %></td>
      <% if current_user.id == discussion.user.id %>
      <td><a class="options" href="/discussions/<%= discussion.id %>/edit">Edit</a><a class="options" href="/discussions/<%= discussion.id %>" data-method="delete" data-confirm="Are you sure?">Delete</a></td>
      <% else %>
      <td>unavaliable<td>
      <% end %>
    </tr>
    <% end %>
  </tbody>
</table>
